.owl
    &-prev, &-next
        display: flex
        justify-content: center
        align-items: center
        padding: 0
        width: 40px
        height: 40px
        border-radius: 50%
        background: var(--primary-contrast)
        color: var(--primary)
        text-indent: 0

        &:before
            display: none

        .ico
            width: 10px
            height: 18px
            fill: currentColor

    &-pagination
        .cms-home .header-container + .banner &
            position: absolute
            bottom: 0
            padding: 10px 0
            width: 100%

            .owl-page
                span
                    width: 13px
                    height: 13px
                    background: var(--primary-contrast)
                    box-shadow: inset 0 0 0 3px var(--primary-contrast)
                    opacity: 1

                &.active span
                    background: var(--primary)