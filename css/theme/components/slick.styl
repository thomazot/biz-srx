.slick
    &-arrow
        display: flex
        flex: 0 0 40px
        justify-content: center
        align-items: center
        padding: 0
        width: 40px
        height: 40px
        border-radius: 50%
        background: var(--tertiary-hover)
        box-shadow: none
        color: var(--primary)

        .ico
            fill: currentColor

    &-list
        @media media-max-lg
            margin: -2px !important
            padding: 2px !important

    &-slider
        display: flex !important
        flex-flow: row
        justify-content: center
        align-items: center

    &-vertical
        flex-flow: column

        .slick
            &-arrow
                transform: rotate(90deg)

            &-prev
                margin-bottom: 20px

            &-next
                margin-top: 20px