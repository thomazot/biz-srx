.veiculos
    --border-color: #e5e5e5
    --color: #999999

    .owl-wrapper-outer
        box-sizing: content-box
        margin: -2px
        padding: 2px

    .banner
        &__wrapper
            display: flex

        &__item
            display: flex
            flex-flow: column nowrap
            padding-top: 45px
            background: #ffffff
            box-shadow: 0 0 0 1px var(--border-color)

            .title
                display: block
                padding-top: 35px
                color: var(--color)
                text-align: center
                text-transform: uppercase
                font-weight: bold
                font-size: 13px

        img
            height: 55px
            object-fit: contain

        a
            display: flex
            order: -1
            justify-content: center
            align-items: center
            overflow: hidden
            padding: 0 15px

    &__title
        padding: 45px 0 25px
        text-align: center
        text-transform: uppercase
        font-weight: bold
        font-size: 26px

    &__footer
        display: flex
        justify-content: center
        align-items: center
        padding: 35px 0

        &:before, &:after
            flex: 1
            min-width: 0
            height: 1px
            background: var(--border-color)
            content: ''

    &__link
        position: relative
        display: inline-flex
        justify-content: center
        align-items: center
        margin: 0 16px
        padding: 0 16px
        height: 25px
        color: var(--secundary-contrast)
        text-transform: uppercase
        font-weight: bold
        font-size: 13px

        bgSkew()

        &:after
            background: var(--secundary)

        &:hover
            color: @color

            &:after
                @media media-min-lg
                    background: var(--secundary-hover)

        span
            position: relative
            z-index: 1
